	opt l+

	XDEF	_xaDoCRC

	SECTION	docrc,CODE

_xaDoCRC:
	movem.l	d2/d3,-(sp)	; Save registers

	move.l	d0,d3		; Save the length
	lea	Table(pc),a1	; Get the CRC table

	moveq	#-1,d0		; Reset CRC value
	moveq	#8,d2		; Store for shifting

1$	moveq	#0,d1		; Avoid ext.w and ext.l
	move.b	(a0)+,d1	; Get the next data byte

	eor.b	d0,d1		; Data = Data ^ CRC

	add.w	d1,d1
	add.w	d1,d1		; Turn byte index into long word index

	move.l	0(a1,d1.w),d1	; Get table entry

	lsr.l	d2,d0		; CRC = CRC >> 8
	eor.l	d1,d0		; CRC = Entry ^ CRC

	subq.l	#1,d3		; Get next data byte
	bne.b	1$

	movem.l	(sp)+,d2/d3	; Restore registers
	rts

	cnop	0,4

